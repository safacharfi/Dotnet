@model sav.Models.Client

@{
    ViewData["Title"] = "Supprimer un Client";
}

<h2>Supprimer un Client</h2>

<p>Êtes-vous sûr de vouloir supprimer ce client ?</p>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Email :</strong> @Model.Email</p>
        <p class="card-text"><strong>Téléphone :</strong> @Model.PhoneNumber</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.ClientId" />
    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</div>
