@model sav.Models.Employee

<h2>Ajouter un Nouvel Employé</h2>

<form asp-action="EmployeeCreate" method="post">
    <div class="form-group">
        <label asp-for="Name">Nom</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Position">Poste</label>
        <input asp-for="Position" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Téléphone</label>
        <input asp-for="Phone" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Ajouter</button>
</form>

<a href="@Url.Action("EmployeeIndex", "Admin")" class="btn btn-primary">Retour à la liste</a>