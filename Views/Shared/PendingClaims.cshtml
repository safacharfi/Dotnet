@model IEnumerable<sav.Models.Claim>

<h2>Réclamations en Attente</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Ajouter une Réclamation</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Client</th>
            <th>Article</th>
            <th>Description</th>
            <th>Statut</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var claim in Model.Where(c => c.Status == "En attente")) // Filtrer les réclamations en attente
            {
                <tr>
                    <td>@claim.Client.Name</td>
                    <td>@claim.Article.Name</td>
                    <td>@claim.Description</td>
                    <td>@claim.Status</td>
                    <td>@claim.Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@claim.ClaimId" class="btn btn-warning btn-sm">Modifier</a>
                        <a asp-action="Delete" asp-route-id="@claim.ClaimId" class="btn btn-danger btn-sm">Supprimer</a>
                        <a asp-action="ProcessClaim" asp-route-id="@claim.ClaimId" class="btn btn-info btn-sm">Traiter</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Aucune réclamation en attente trouvée.</td>
            </tr>
        }
    </tbody>
</table>