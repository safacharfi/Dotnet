<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4062F6;
            --background: #4062F6;
        }

        html, body {
            height: 100%;
            margin: 0;
            background: var(--background);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 380px;
            padding: 2rem;
            margin: 1rem;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .shield-icon {
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .form-control {
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }

        .form-label {
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .btn-connect {
            background: var(--primary-color);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem;
            font-weight: 500;
            width: 100%;
            color: white;
            margin-top: 1rem;
        }

            .btn-connect:hover {
                background: #3651d3;
            }

        .return-link {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.875rem;
        }

            .return-link a {
                color: #6B7280;
                text-decoration: none;
            }

        .login-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            font-size: 0.875rem;
            color: #6B7280;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="login-container">
            <div class="login-header">
                <i class="bi bi-shield-lock shield-icon fs-1"></i>
                <h1 class="login-title">Administration ServicePro</h1>
                <p class="login-subtitle">Connectez-vous à votre espace administrateur</p>
            </div>

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-person me-2"></i>Nom d'utilisateur
                    </label>
                    <input type="text"
                           class="form-control"
                           id="username"
                           name="username"
                           required
                           placeholder="Entrez votre identifiant"
                           autocomplete="username" />
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-key me-2"></i>Mot de passe
                    </label>
                    <input type="password"
                           class="form-control"
                           id="password"
                           name="password"
                           required
                           placeholder="Entrez votre mot de passe"
                           autocomplete="current-password" />
                </div>

                <button type="submit" class="btn btn-connect">
                    Se connecter
                </button>

                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                {
                    <div class="alert alert-danger mt-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <ul>
                                <li>@ViewData["ErrorMessage"]</li>
                            </ul>
                        </div>
                    </div>
                }
            </form>

            <div class="return-link">
                <a href="/">
                    <i class="bi bi-arrow-left me-1"></i>Retour à l'accueil
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>