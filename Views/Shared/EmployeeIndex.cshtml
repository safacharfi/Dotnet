@model IEnumerable<sav.Models.Employee>

<h2>Liste des Employés</h2>

<a href="@Url.Action("EmployeeCreate", "Admin")" class="btn btn-primary">Ajouter un Employé</a>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Poste</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a href="@Url.Action("EmployeeDetails", "Admin", new { id = employee.EmployeeId })" class="btn btn-info">Détails</a>
                    <a href="@Url.Action("EmployeeEdit", "Admin", new { id = employee.EmployeeId })" class="btn btn-warning">Modifier</a>
                    <a href="@Url.Action("EmployeeDelete", "Admin", new { id = employee.EmployeeId })" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>