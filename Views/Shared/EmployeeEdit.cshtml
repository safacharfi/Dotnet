namespace sav.Views.Shared
{
  @model sav.Models.Employee

<h2>Modifier l'Employé</h2>

<form asp-action="EmployeeEdit" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <label asp-for="Name">Nom</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Position">Poste</label>
        <input asp-for="Position" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Téléphone</label>
        <input asp-for="Phone" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Modifier</button>
</form>

<a href="@Url.Action("EmployeeIndex", "Admin")" class="btn btn-primary">Retour à la liste</a>
}
