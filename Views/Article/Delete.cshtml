@model sav.Models.Article

@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>

<h4>Are you sure you want to delete this article?</h4>

<div>
    <h4>@Model.Name</h4>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
    <p>
        <strong>Status:</strong>
        @if (Model.IsUnderWarranty)
        {
            <span class="badge bg-success">Under Warranty</span>
        }
        else
        {
            <span class="badge bg-danger">Out of Warranty</span>
        }
    </p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.ArticleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
