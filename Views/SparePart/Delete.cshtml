@model sav.Models.SparePart

@{
    ViewData["Title"] = "Delete Spare Part";
}

<h2>Delete Spare Part</h2>

<h4>Are you sure you want to delete this item?</h4>
<div>
    <h4>Spare Part</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="SparePartId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
